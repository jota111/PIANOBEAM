<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="36dp"
            android:background="@drawable/explain_octave"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <com.test.test.DrawGunban
            android:id="@+id/piano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_octave2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave2"/>

        <ImageView
            android:id="@+id/btn_octave3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave3"/>

        <ImageView
            android:id="@+id/btn_octave4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave4"/>

        <ImageView
            android:id="@+id/btn_octave5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave5"/>

        <ImageView
            android:id="@+id/btn_octave6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave6"/>

        <ImageView
            android:id="@+id/btn_octave7"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/octave7"/>
    </LinearLayout>
</LinearLayout>